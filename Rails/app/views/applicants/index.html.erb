<p id="notice"><%= notice %></p>

<h1>Applicants</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Property applied</th>
      <th>Property occupied</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.name %></td>
        <td><%= applicant.email_address %></td>
        <td><%= applicant.phone_number %></td>
        <td><%= applicant.property_applied %></td>
        <td><%= applicant.property_occupied %></td>
        <td><%= link_to 'Show', applicant %></td>
        <td><%= link_to 'Edit', edit_applicant_path(applicant) %></td>
        <td><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

